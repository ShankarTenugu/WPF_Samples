<Window x:Class="WpfAllExamples.ResourcesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAllExamples"
        mc:Ignorable="d"
        Title="ResourcesWindow" Height="300" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="solidBrush" Color="Azure"></SolidColorBrush>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Rectangle Height="20" Margin="20" Fill="{StaticResource solidBrush}"></Rectangle>
            <Button x:Name = "changeResourceButton"
         Content = "_Change Resource" Click = "changeResourceButton_Click" />
        </StackPanel>
    </Grid>
</Window>

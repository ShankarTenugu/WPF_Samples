<Window x:Class="WpfAllExamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAllExamples"
        xmlns:Person ="clr-namespace:WpfAllExamples"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <TextBox Name="txtBox1" Text="{Binding Age, Mode=OneWay}"></TextBox>
            <TextBox Name="txtBox2" Text="{Binding Name, Mode=TwoWay}"></TextBox>
            <Button x:Name="button" Content="Button" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Height="211" Click="button_Click" Width="222" />
        </StackPanel>
        
    </Grid>
</Window>
